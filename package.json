{
  "name": "dp-frontend",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "https://github.com/orgs/daritelska-platforma",
  "scripts": {
    "dev": "yarn && next -p 3040",
    "build": "next build",
    "start": "next start -p 3040",
    "lint": "eslint . --fix --ext=ts,tsx",
    "lint:styles": "stylelint **.scss",
    "format": "prettier --write .",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "dc": "docker-compose --env-file .env.local",
    "up": "yarn dc up -d && yarn logs",
    "logs": "yarn dc logs -f",
    "down": "yarn dc down"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "formik": "^2.2.6",
    "highcharts": "^9.0.1",
    "highcharts-react-official": "^3.0.0",
    "mobx": "^6.0.4",
    "mobx-react": "^7.0.5",
    "next": "^10.0.5",
    "next-auth": "^3.4.1",
    "next-i18next": "^8.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-gtm-module": "^2.0.11",
    "react-in-viewport": "^1.0.0-alpha.16",
    "sass": "^1.32.4",
    "typewriter-effect": "^2.17.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@types/next-auth": "^3.1.24",
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.0",
    "@types/react-gtm-module": "^2.0.0",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "yarn run lint"
    ],
    "*.{ts,tsx,js,json}": [
      "yarn run format"
    ],
    "*.scss": "yarn run lint:styles"
  }
}
